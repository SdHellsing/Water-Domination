{% extends 'base.html.twig' %}

{% block body %}

    <table border="1">
        <tr>
            <td>Username</td>
            <td>Password</td>
            <td>Email</td>
        </tr>


        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.email }}</td>
                <td><a href="{{ path("users_edit", {id: user.id}) }}">Edit</a></td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}

