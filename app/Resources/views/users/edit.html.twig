{% extends 'base.html.twig' %}

{% block body %}

    <h3> Let's edit </h3>

    {{ form_start(form) }}

    <div>
        {{ form_label(form.username) }}
        {{ form_widget(form.username) }}
    </div>

    <div>
        {{ form_widget(form.password) }}
    </div>

    <div>
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
    </div>

    <div>
        <input type="submit" value="Edit"/>
    </div>

    {{ form_end(form) }}

{% endblock %}

